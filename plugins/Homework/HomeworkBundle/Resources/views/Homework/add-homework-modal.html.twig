{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% block title %}添加+作业{% endblock %}
{% block body %}

<form id="course-material-form" class="form-horizontal" action="{{ path('homework_add', {courseId:course.id, lessonId:lesson.id}) }}" enctype="multipart/form-data" method="post">
  
    <div class="form-group">
    <div class="col-md-10 col-md-offset-1 controls">
    <input type="hidden" name="homework_id" value="{{ homework.id }}" />
      <textarea class="form-control" name="content" rows="2" placeholder="填写作业描述 (必填)">{{ homework.content }}</textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10 col-md-offset-1 controls">
      <button class="btn btn-primary" id="material-upload-btn" type="submit">添加</button>
    </div>
  </div>

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

</form>

<script>app.load('homework/homework-modal')</script>

{% endblock %}

{% set hide_footer = true %}