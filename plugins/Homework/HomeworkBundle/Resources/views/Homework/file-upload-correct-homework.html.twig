{% extends 'HomeworkBundle::layout.html.twig' %}

{% set menu = 'admin_setting_massage' %}

{% set script_controller = 'homework/correct' %}

{% block main %}

{{ web_macro.flash_messages() }}

<form class="form-horizontal" id="site-form" method="post">
  
  <fieldset>
    


    <div class="form-group">
      <div class="col-md-2 control-label">
        <label for="logo">作业图片</label>
      </div>
      <div class="col-md-8 controls">
        <div id="site-logo-container">{% if site.logo %}<img src="{{ asset(site.logo) }}">{% endif %}</div>
        <a class="btn btn-default" id="site-logo-upload" 
        data-upload-token="{{ upload_token('user', 'image') }}"
        data-goto-url="{{ path('homework_correct_upload') }}">上传</a>
        <button class="btn btn-default" id="site-logo-remove" type="button" data-url="{{ path('admin_setting_logo_remove') }}" style="display:none;">删除</button>
        <p class="help-block">请上传png, gif, jpg格式的图片文件。LOGO图片建议不要超过1024*768。</p>
        <input type="hidden" name="logo" value="{{ site.logo }}">
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2 control-label">
        <label>网站关闭公告</label>
      </div>
        <div class="col-md-8 controls">
          <textarea id="closed_note" name="closed_note" class="form-control" rows="4"></textarea>
        <p class="help-block">关于作业的文字描述。</p>
      </div>
    </div>    

  </fieldset>

 



  <div class="row form-group">
    <div class="controls col-md-offset-2 col-md-8">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  
</form>

{% endblock %}